<%- include('./partials/header.ejs')%>
<form id="simple-forms" method="POST" action="/trades/<%= trade.id %>?_method=PUT">
    <div id = "labels">
        <label>Category</label>
        <input type="text" id="singerName-input" name= "category" value="<%= trade.category %>" required>
    </div>
    <div>
        <label>Item Name</label>
        <input type="text" id="name-input" name= "name" value="<%= trade.name %>" required>
    </div>
    <div>
        <label>Details</label>
        <textarea rows="10" cols="50" name= "details" required minlength="10"><%= trade.details %></textarea>
    </div>
    <div>
        <label for="image">Image URL</label>
        <input type="url" id="image" name="image" value="<%= trade.image %>" placeholder="Image URL">
    </div>
    <button type="submit" id="create--album-button">Update</button>
</form>
<%- include('./partials/footer.ejs')%>